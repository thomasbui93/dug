{
  "version": 2,
  "builds": [{
    "src": "src/index.js",
    "use": "@now/node-server"
  }],
  "env": {
    "QUOTE_URL": "https://quote-garden.herokuapp.com/quotes/random",
    "BASE_POEM_URL": "https://www.thivien.net",
    "AUTHOR": "Lý Bạch"
  },
  "routes": [
    {
      "src": "/z/check",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/greeting",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/poem",
      "dest": "src/index.js",
      "methods": ["GET"]
    }
  ]
}
